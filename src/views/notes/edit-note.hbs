<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>edit note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=put" method="post">
            <input type="hidden" name="_method" value="put">
                <div class="form-group">

                    <input type="text" name="title" class="form-control" placeholder="title" value="{{note.title}}">
                </div>

                <div class="form-group">


                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-primaty btn-block" type="submit">save</button>
                </div>

            </form>
        </div>
    </div>
</div>